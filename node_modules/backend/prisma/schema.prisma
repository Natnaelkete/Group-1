// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  phone    String    @unique
  name     String?
  role     String
  email    String?
  password String?
  products Product[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  quantity    Int
  price       Float?   
  description String? 
  imageUrl    String?  
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}
