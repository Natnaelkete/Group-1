// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  phone    String    @unique
  name     String?
  role     String
  email    String?
  password String?
  products Product[]
  Advice   Advice[]
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  quantity    Int
  price       Float?
  description String?
  imageUrl    String?
  userId      String  @db.ObjectId
  user        User    @relation(fields: [userId], references: [id])
}

model Advice {
  id      String @id @default(cuid()) @map("_id") @db.ObjectId
  advice  String
  crop    String
  region  String
  problem String
  userId  String @db.ObjectId
  user    User   @relation(fields: [userId], references: [id])
}
