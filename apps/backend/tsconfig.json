{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node", // Add this line
    "outDir": "./dist",        // Add this line
    "rootDir": "./",
    
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}